<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="de.swapover.de.myapp.MainActivity"
    tools:showIn="@layout/activity_main"
    android:background="@color/contentBackgroundColor">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/my_title"
        android:id="@+id/main_title"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="22dp"
        android:textColor="@color/colorPrimary" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_text_spotify"
        android:id="@+id/btn_spotify"
        android:layout_below="@+id/main_title"
        android:layout_marginTop="25dp"
        android:layout_alignStart="@+id/main_title"
        android:layout_alignEnd="@+id/main_title"
        android:background="@color/colorOrange" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_text_scores"
        android:id="@+id/btn_scores"
        android:layout_below="@+id/btn_spotify"
        android:layout_alignStart="@+id/btn_spotify"
        android:layout_marginTop="10dp"
        android:layout_alignEnd="@+id/btn_spotify"
        android:background="@color/colorOrange" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_text_library"
        android:id="@+id/btn_library"
        android:layout_below="@+id/btn_scores"
        android:layout_alignStart="@+id/btn_scores"
        android:layout_marginTop="10dp"
        android:layout_alignEnd="@+id/btn_scores"
        android:background="@color/colorOrange" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_text_build"
        android:id="@+id/btn_build"
        android:layout_below="@+id/btn_library"
        android:layout_alignStart="@+id/btn_library"
        android:layout_alignEnd="@+id/btn_library"
        android:layout_marginTop="10dp"
        android:background="@color/colorOrange" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_text_xyz"
        android:id="@+id/btn_xyz"
        android:layout_below="@+id/btn_build"
        android:layout_alignStart="@+id/btn_build"
        android:layout_alignEnd="@+id/btn_build"
        android:background="@color/colorOrange"
        android:layout_marginTop="10dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_text_capstome"
        android:id="@+id/btn_capstone"
        android:background="@color/colorRed"
        android:layout_below="@+id/btn_xyz"
        android:layout_alignStart="@+id/btn_xyz"
        android:layout_alignEnd="@+id/btn_xyz"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorWhite" />

</RelativeLayout>
